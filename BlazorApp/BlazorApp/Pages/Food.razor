@page "/food"
@using BlazorApp.Data

@inject IFoodService foodService;
@inject PaymentService paymentService;
@inject SingletonService singletonService;
@inject TransientService transientService;
@inject ScopedService scopedService;

<h3>Food</h3>

<div>
    @foreach (var food in foodService.GetFoods())
    {
        <div>@food.Nmae</div>
        <div>@food.Price</div>
    }
</div>

<br/>

<div>
    <h3>가격 합 : @paymentService.Calculate()</h3>
</div>

<div>
    <h1>Singleton</h1>
    Guid : @singletonService.ID
    <h1>Transient</h1>
    Guid : @transientService.ID
    <h1>Scoped</h1>
    Guid : @scopedService.ID
</div>

